{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",

    /* --- New Output Configuration --- */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Strictness and Linting */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    /* Point 4: Testing Configuration */
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src",
    "src/setupTests.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}